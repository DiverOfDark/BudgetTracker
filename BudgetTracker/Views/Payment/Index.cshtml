@using System.Collections.Generic
@using System.Linq
@using Controllers.ViewModels.Payment
@using Model
@model System.Collections.Generic.IList<Controllers.ViewModels.Payment.PaymentMonthViewModel>
@{
    ViewData["Title"] = "Движение денежных средств";

}
<div class="container">
    <div class="row row-cards row-deck">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Движение денежных средств 
                        @if (ViewBag.Groups == null)
                        {
                            <span class="badge badge-primary">@Model.First().PaymentModels.First().Category</span>                            
                        }
                     </h3>
                    <div class="card-options">
                        &nbsp;
                        <a class="btn btn-primary btn-sm" href="@Url.Action("SpentCategories")">
                            Категории расходов
                        </a>

                        @if (ViewBag.Groups != null && ViewBag.FilterCategorized != null)
                        {
                            <a class="btn btn-secondary btn-sm ml-2" href="?Groups=@(!ViewBag.Groups)&FilterCategorized=@(ViewBag.FilterCategorized)">
                                @if (ViewBag.Groups)
                                {
                                    <text>Разгруппировать</text>
                                }
                                else
                                {
                                    <text>Сгруппировать</text>
                                }
                            </a>
                            <a class="btn btn-secondary btn-sm ml-2" href="?Groups=@(ViewBag.Groups)&FilterCategorized=@(!ViewBag.FilterCategorized)">
                                @if (ViewBag.FilterCategorized)
                                {
                                    <text>Показать все</text>
                                }
                                else
                                {
                                    <text>Скрыть с категориями</text>
                                }
                            </a>
                        }
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table card-table table-sm table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Когда</th>
                            <th>Тип</th>
                            <th>Категория</th>
                            <th>Провайдер</th>
                            <th>Счёт</th>
                            <th>Сумма</th>
                            <th>Сообщение</th>
                            <th>Удалить</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var month in Model)
                        {
                            <tr>
                                <th colspan="7">
                                    <span class="card-title">
                                        <a href="#" data-toggle="collapse" data-target=".collapse-@month.Key" aria-expanded="false" aria-controls="collapse">
                                            @month.When.ToString("MMMM yyyy")
                                        </a>
                                    </span>
                                    
                                    @foreach (var item in month.Totals.OrderBy(v=>v.Key))
                                    {
                                        <span class="badge badge-primary">@item.Value.ToString("N2") @item.Key</span>
                                    }
                                    
                                    <span class="badge badge-secondary">@month.PaymentModels.SelectMany(v=>v.Items).Count(v => v.Category == null) без категорий</span>
                                </th>
                            </tr>

                            var source = ViewBag.Groups == null ? month.PaymentModels.OrderBy(v => v.When) : month.PaymentModels.OrderBy(v => v.Kind).ThenByDescending(v => v.Amount).ThenBy(v => v.When);

                            foreach (var payment in source)
                            {
                                <tr class="collapse-@month.Key collapse show">
                                    <td class="text-nowrap">@payment.When</td>
                                    <td class="text-nowrap">@payment.Kind.GetDisplayName()</td>
                                    <td class="text-nowrap">@payment.Category</td>
                                    <td class="text-nowrap">@payment.Provider</td>
                                    <td class="text-nowrap">@payment.Account</td>
                                    <td>
                                        <b>@payment.Amount</b> 
                                        <i>@payment.Ccy</i>
                                    </td>
                                    <td>
                                        <b>@payment.What</b>
                                        @if (payment.Count > 1)
                                        {
                                            <a href="@Url.Action("PaymentList", new { id=payment.Id })" target="_blank">
                                                (@payment.Count)
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        @if (payment.Count > 1)
                                        {
                                            <a href="@Url.Action("PaymentList", new { id=payment.Id })" target="_blank">
                                                (@payment.Count)
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("SplitPayment", new {id = payment.Id})">
                                                <span class="fe fe-git-branch"></span>
                                            </a>
                                            <a href="@Url.Action("EditPayment", new {id = payment.Id})">
                                                <span class="fe fe-edit-2"></span>
                                            </a>
                                            <a href="@Url.Action("DeletePayment", new {id = payment.Id})">
                                                <span class="fe fe-x-circle"></span>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>