@using Model
@model Controllers.ViewModels.Sms.SmsListViewModel
@{
    ViewData["Title"] = "Траты и SMS";

}
<div class="container">
    <div class="row row-cards row-deck">
        <div class="col-12">
            <div class="collapse" id="collapseRules">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Правила обработки SMS
                        </h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table card-table table-sm table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Правило</th>
                                <th>Шаблон отправителя</th>
                                <th>Шаблон сообщения</th>
                                <th>Удалить</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var rule in Model.Rules.OrderBy(v => v.RuleType).ThenBy(v => v.RegexSender).ThenBy(v => v.RegexText))
                            {
                                <tr>
                                    <td>
                                        @switch (rule.RuleType)
                                        {
                                            case RuleType.Money:
                                                <text>Траты</text>
                                                break;
                                            case RuleType.Ignore:
                                                <text>Игнорировать</text>
                                                break;
                                        }
                                    </td>
                                    <td>@rule.RegexSender</td>
                                    <td>@rule.RegexText</td>
                                    <td>
                                        <a href="@Url.Action("DeleteRule", new {id = rule.Id})">
                                            <span class="fe fe-x-circle"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
    
                            <form action="@Url.Action("CreateRule")">
                                <tr>
                                    <td>
                                        <select id="ruleType" name="ruleType" class="form-control form-control-sm">
                                            <option value="Ignore">Скрывать</option>
                                            <option value="Money">Считать как трату</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="text" id="regexSender" name="regexSender" class="form-control form-control-sm"/>
                                    </td>
                                    <td>
                                        <input type="text" id="regexText" name="regexText" class="form-control form-control-sm"/>
                                    </td>
                                    <td>
                                        <input type="submit" class="btn btn-sm btn-azure" value="Добавить"/>
                                    </td>
                                </tr>
                            </form>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="collapse" id="collapseCategory">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Категории расходов
                        </h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table card-table table-sm table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Категория</th>
                                <th>Шаблон</th>
                                <th>Удалить</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var category in Model.Categories.OrderBy(v => v.Category).ThenBy(v => v.Pattern))
                            {
                                <tr>
                                    <td>@category.Category</td>
                                    <td>@category.Pattern</td>
                                    <td>
                                        <a href="@Url.Action("DeleteCategory", new {id = category.Id})">
                                            <span class="fe fe-x-circle"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
        
                            <form action="@Url.Action("CreateCategory")">
                                <tr>
                                    <td>
                                        <input type="text" id="category" name="category" class="form-control form-control-sm"/>
                                    </td>
                                    <td>
                                        <input type="text" id="pattern" name="pattern" class="form-control form-control-sm"/>
                                    </td>
                                    <td>
                                        <input type="submit" class="btn btn-sm btn-azure" value="Добавить"/>
                                    </td>
                                </tr>
                            </form>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-cards row-deck">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Траты и SMS 
                    </h3>
                    <div class="card-options">
                        <button class="btn btn-primary btn-sm" type="button" data-toggle="collapse" data-target="#collapseRules" aria-expanded="false" aria-controls="collapse">
                            Правила обработки SMS
                        </button>
                        &nbsp;
                        <button class="btn btn-primary btn-sm" type="button" data-toggle="collapse" data-target="#collapseCategory" aria-expanded="false" aria-controls="collapse">
                            Категории расходов
                        </button>
                        <a class="btn btn-secondary btn-sm" href="?ShowHidden=@(!Model.ShowHidden)">
                            @if (Model.ShowHidden)
                            {
                                <text>Скрыть обработанное</text>
                            }
                            else
                            {
                                <text>Показать обработанное</text>
                            }
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table card-table table-sm table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Когда</th>
                            <th>От кого</th>
                            <th>Сообщение</th>
                            <th>Удалить</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var month in Model.Months)
                        {
                            <tr>
                                <th colspan="4">
                                    <span class="card-title">
                                        <a href="#" data-toggle="collapse" data-target=".collapse-@month.Key" aria-expanded="false" aria-controls="collapse">
                                            @month.When.ToString("MMMM yyyy")
                                        </a>
                                    </span>
                                    
                                    <span class="badge badge-secondary">@month.Sms.Count SMS</span>
                                    
                                    @foreach (var item in month.Totals)
                                    {
                                        <span class="badge badge-primary">@item.Value @item.Key</span>
                                    }
                                </th>
                            </tr>
    
                            foreach (var payment in month.PaymentModels.OrderByDescending(v=>v.Amount))
                            {
                                <tr class="collapse-@month.Key collapse show">
                                    <td class="text-nowrap">@payment.When</td>
                                    <td><b>Трата</b></td>
                                    <td>
                                        <b>@payment.Amount</b> 
                                        <i>@payment.Ccy</i> 
                                        на 
                                        <b>@payment.What</b>
                                        @if (payment.Count > 1)
                                        {
                                            <a href="#" data-toggle="collapse" data-target=".collapse-@payment.Id" aria-expanded="false" aria-controls="collapse">
                                                (@payment.Count)
                                            </a>
                                            <div class="collapse collapse-@payment.Id">
                                                @foreach (var item in payment.Items)
                                                {
                                                    <div>&mdash;
                                                        <b>@item.Amount</b> 
                                                        <i>@item.Ccy</i> 
                                                        на 
                                                        <b>@item.What</b>
                                                        в
                                                        <b>@item.When.ToString("f")</b>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (payment.Count > 1)
                                        {
                                            <a href="#" data-toggle="collapse" data-target=".collapse-@payment.Id" aria-expanded="false" aria-controls="collapse">
                                                (@payment.Count)
                                            </a>
                                            <div class="collapse collapse-@payment.Id">
                                                @foreach (var item in payment.Items)
                                                {
                                                    <div>
                                                        <a href="@Url.Action("EditPayment", new {id = item.Id})">
                                                            <span class="fe fe-edit-2"></span>
                                                        </a>
                                                        <a href="@Url.Action("DeletePayment", new {id = item.Id})">
                                                            <span class="fe fe-x-circle"></span>
                                                        </a>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("EditPayment", new {id = payment.Id})">
                                                <span class="fe fe-edit-2"></span>
                                            </a>
                                            <a href="@Url.Action("DeletePayment", new {id = payment.Id})">
                                                <span class="fe fe-x-circle"></span>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                                
                            foreach (var sms in month.Sms)
                            {
                                {
                                    <tr class="collapse-@month.Key collapse show">
                                        <td class="text-nowrap">@sms.When</td>
                                        <td>@sms.From</td>
                                        <td>@sms.Message</td>
                                        <td>
                                            <a href="@Url.Action("DeleteSms", new {id = sms.Id})">
                                                <span class="fe fe-x-circle"></span>
                                            </a></td>
                                    </tr>
                                }
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>