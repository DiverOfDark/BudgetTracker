@model Controllers.ViewModels.Table.TableViewModel
@{
    ViewData["Title"] = "Таблица";
    var rootClass = Model.Headers.Count > 8 ? "container-fluid" : "container";
    var currentProvider = (String)ViewData["Provider"];
}

<div class="@rootClass">
    <div class="row row-cards row-deck">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">История</h3>
                    <div style="width: 200px; margin-left: 15px;">
                        <select class="form-control form-control-sm" id="providerSelector">
                            @foreach (var provider in Model.Headers.Select(s => s.Provider).Distinct().OrderBy(s => s))
                            {
                                if (provider == currentProvider)
                                {
                                    <option name="@provider" value="@provider" selected="selected">@provider</option>
                                }
                                else
                                {
                                    <option name="@provider" value="@provider">@provider</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="card-options">
                        <a class="btn btn-secondary btn-sm ml-2" href="@Url.Action("Index", "Metadata")"><span class="small fe fe-edit-2"></span></a>
                        <a class="btn btn-secondary btn-sm ml-2" href="?ShowDelta=@(!Model.ShowDelta)">
                            @if (!Model.ShowDelta)
                            {
                                <text>&Delta;</text>
                            }
                            else
                            {
                                <text>&Tau;</text>
                            }
                        </a>
                        <a class="btn btn-secondary btn-sm ml-2" href="?ShowAll=@(!Model.ShowAll)">
                            @if (Model.ShowAll)
                            {
                                <text>Только видимые</text>
                            }
                            else
                            {
                                <text>Все столбцы</text>
                            }
                        </a>
                        <a class="btn btn-secondary btn-sm ml-2" href="?ShowControls=@(!Model.ShowControls)">
                            @if (Model.ShowControls)
                            {
                                <text>Скрыть кнопки</text>
                            }
                            else
                            {
                                <text>Показать кнопки</text>
                            }
                        </a>
                        <a class="btn btn-secondary btn-sm ml-2" href="?ExemptTransfers=@(!Model.ExemptTransfers)">
                            @if (Model.ExemptTransfers)
                            {
                                @:Показать переводы
                            }
                            else
                            {
                                @:Скрыть переводы
                            }
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm table-vcenter card-table table-hover table-striped text-nowrap">
                        <tr>
                            <th scope="col" rowspan="2">Когда</th>
                            @foreach (var p in Model.Headers.Where(v => v.Provider == currentProvider && (v.IsVisible || Model.ShowAll)).Select(v => v.Provider).Distinct())
                            {
                                <th scope="col" colspan="@Model.Headers.Where(v => v.IsVisible || Model.ShowAll).Count(s => s.Provider == p)">
                                    @p
                                </th>
                            }
                        </tr>
                        <tr>
                            @foreach (var p in Model.Headers.Where(v => v.Provider == currentProvider && (v.IsVisible || Model.ShowAll)))
                            {
                                <th title="@p.AccountName">
                                    @p.UserFriendlyName
                                    
                                    <a href="@Url.Action("Chart", new {provider = p.Provider, account = p.AccountName ?? p.UserFriendlyName})">
                                        <span class="fe fe-trending-up"></span>
                                    </a>

                                    @if (Model.ShowControls)
                                    {
                                        <a href="@Url.Action("MetadataEdit", "Metadata", new {id = p.Id})">
                                            <span class="fe fe-edit-2"></span>
                                        </a>
                                    }
                                </th>
                            }
                        </tr>
                        @foreach (var item in Model.Values)
                        {
                            <tr>
                                <th class="table-dark" scope="row">@item.When.ToString("dd.MM.yyyy")</th>
                                @foreach (var h in Model.Headers.Where(v => v.Provider == currentProvider && (v.IsVisible || Model.ShowAll)))
                                {
                                    var p = item.Cells.GetValueOrDefault(h);

                                    <td class="@(p == null || p?.FailedToResolve.Any() == true ? "table-dark" : "")">
                                        @{
                                            var value = Model.ExemptTransfers ? p?.AdjustedValue : p?.Value;
                                            if (value != null)
                                            {
                                                <div alt="@p.Tooltip" title="@p.Tooltip" data-toggle="tooltip">
                                                    @if (double.IsNaN(value.Value))
                                                    {
                                                        <span class="fe fe-check"></span>
                                                    }
                                                    else
                                                    {
                                                        if (Model.ShowDelta)
                                                        {
                                                            if (p.DiffValue != null)
                                                            {
                                                                var ok = p.DiffValue > 0 ? "text-success" : "text-danger";

                                                                <span class="@ok">@(p.DiffValue > 0 ? "+" : "")@p.DiffValue.Value.ToString("#,0.00")</span>
                                                            }
                                                            else
                                                            {
                                                                <text>&mdash;</text>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <span>@value.Value.ToString("#,0.00")</span>
                                                        }
                                                        if (!string.IsNullOrEmpty(p.Ccy))
                                                        {
                                                            <span style="font-size: x-small; color: gray;">
                                                                <i>@p.Ccy</i>
                                                            </span>
                                                        }
                                                        
                                                        var percentage = p.DiffPercentage;

                                                        if (percentage != null && Math.Abs(percentage.Value) > 0.0001)
                                                        {
                                                            var ok = percentage > 0 ? "text-success" : "text-danger";

                                                            var data = (percentage > 0 ? "+" : "") + percentage.Value.ToString("P");
                                                            
                                                            <span style="font-size: 0.7em" class="@ok">
                                                                <text>@data</text>
                                                            </span>
                                                        }
                                                    }
                                                    @if (Model.ShowControls && p.Money != null)
                                                    {
                                                        <a style="position: relative; right: 0;" href="@Url.Action("DeleteMoney", new {id = p.Money.Id})">
                                                            <span class="fe fe-x-circle"></span>
                                                        </a>
                                                    }
                                                </div>
                                            }
                                            else if (p != null)
                                            {
                                                <div alt="@p.Tooltip" title="@p.Tooltip">
                                                    &mdash;
                                                </div>
                                            }
                                            else
                                            {
                                                <text>&mdash;</text>
                                                if (Model.ShowControls)
                                                {
                                                    var calculatedResult = item.Previous?.Cells.GetValueOrDefault(h);
                                                    if (calculatedResult?.Value != null && !double.IsNaN(calculatedResult.Value.Value))
                                                    {
                                                        <a href="@Url.Action("CopyFromPrevious", new {headerId = h.Id, date = item.When.ToString("dd.MM.yyyy")})">
                                                            <span class="fe fe-copy"></span>
                                                        </a>
                                                        <a href="@Url.Action("MarkAsOk", new {headerId = h.Id, date = item.When.ToString("dd.MM.yyyy")})">
                                                            <span class="fe fe-check"></span>
                                                        </a>
                                                    }
                                                }
                                            }
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        (function() {
            $('#providerSelector').on('change', function(item) {
                var selectedOption = item.currentTarget.selectedOptions[0].value;

                window.location = "?provider=" + selectedOption;
            });
        })();
    </script>
}